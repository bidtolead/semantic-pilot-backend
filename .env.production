# Backend production environment variables
# Copy to Render (production service) or use locally with ENV=production

# Service account (pick one approach)
GOOGLE_APPLICATION_CREDENTIALS=app/keys/serviceAccountKey.json
# or provide inline JSON
# GOOGLE_APPLICATION_CREDENTIALS_JSON={...}

# CORS origins
FRONTEND_URL=https://semanticpilot.com
FRONTEND_URL_PROD=https://semanticpilot.com

# DataForSEO
DATAFORSEO_LOGIN=your-dataforseo-login
DATAFORSEO_PASSWORD=your-dataforseo-password
DATAFORSEO_API_BASE=https://api.dataforseo.com/v3

# OpenAI / Serper (if used)
OPENAI_API_KEY=your-openai-key
SERPER_API_KEY=your-serper-key
OPENAI_MODEL=gpt-4o-mini

# Email (Resend)
RESEND_API_KEY=your-resend-key

# Stripe live keys
STRIPE_SECRET_KEY=sk_live_xxx
STRIPE_PRICE_PRO=price_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_live_xxx
STRIPE_DUMMY_MODE=false

# Google Ads (if still needed)
GOOGLE_ADS_DEVELOPER_TOKEN=
GOOGLE_ADS_CLIENT_ID=
GOOGLE_ADS_CLIENT_SECRET=
GOOGLE_ADS_REFRESH_TOKEN=
GOOGLE_ADS_LOGIN_CUSTOMER_ID=
GOOGLE_ADS_CUSTOMER_ID=

# Misc
ENV=production
